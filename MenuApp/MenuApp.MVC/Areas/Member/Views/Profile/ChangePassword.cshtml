@model ChangePasswordVM
@{
    ViewData["Title"] = "ChangePassword";
}

<div class="container p-2">

    <form asp-action="ChangePassword" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group mt-2">
            <label asp-for="CurrentPassword" class="control-label"></label>
            <input type="password" asp-for="CurrentPassword" class="form-control bg-white border" />
            <span asp-validation-for="CurrentPassword" class="text-danger"></span>
        </div>
        <div class="form-group mt-2">
            <label asp-for="NewPassword" class="control-label"></label>
            <input type="password" asp-for="NewPassword" class="form-control bg-white border" />
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>
        <div class="form-group mt-2">
            <label asp-for="ConfirmPassword" class="control-label"></label>
            <input type="password" asp-for="ConfirmPassword" class="form-control bg-white border" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>

        <div class="form-group mt-2">
            <button type="submit" class="btn btn-primary">@SharedLocalizer["Save"]</button>
        </div>
    </form>
</div>

