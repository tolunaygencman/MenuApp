@model CategoryCreateVM
@{
    ViewData["Title"] = "Create";
}

<div class="container p-2">

    <form asp-action="Create" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input hidden asp-for="MenuId" value="@TempData["MenuId"]" />
        <div class="form-group mt-2">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control bg-white border" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group mt-2">
            <label asp-for="Description" class="control-label"></label>
            <textarea maxlength="256" asp-for="Description" class="form-control" style="width:100%; height:75px;"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group mt-2">
            <label asp-for="Image" class="control-label"></label>
            <div class="custom-file">
                <input type="file" asp-for="Image" class="custom-file-input" />
                <label class="custom-file-label" for="customFile">@SharedLocalizer["Choose_File"]</label>
            </div>
            <span asp-validation-for="Image.Length" class="text-danger"></span>
            <span asp-validation-for="Image.ContentType" class="text-danger"></span>
        </div>

        <div class="form-group mt-2">
            <button type="submit" class="btn btn-primary">@SharedLocalizer["Save"]</button>
        </div>
    </form>
</div>
@section Scripts{
    <script type="text/javascript">
        $("custom-file-input").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });
    </script>
}


