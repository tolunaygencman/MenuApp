@model List<CategoryListVM>
@{
    ViewData["Title"] = "Index";
}

<a class="btn btn-outline-info" asp-action="Create">Create</a>

<div class="container m-2 ">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th colspan="2">@SharedLocalizer["List", SharedLocalizer["Category"]]</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@SharedLocalizer["Category_Name"]</td>
                <td>@SharedLocalizer["Category_Description"]</td>
            </tr>
            @if (Model.Count > 0)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="2">@SharedLocalizer["Empty_Table"]</td>
                </tr>
            }

        </tbody>
    </table>
</div>