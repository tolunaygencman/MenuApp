@model RegisterVM
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_RegisterLayout.cshtml";
}

<div class="container p-2">

    <form asp-action="Create" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group mt-2">
            <label asp-for="FirstName" class="control-label"></label>
            <input asp-for="FirstName" class="form-control bg-white border" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>

        <div class="form-group mt-2">
            <label asp-for="LastName" class="control-label"></label>
            <input asp-for="LastName" class="form-control bg-white border" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>

        <div class="form-group mt-2">
            <label asp-for="Email" class="control-label"></label>
            <input type="email" asp-for="Email" class="form-control bg-white border" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group mt-2">
            <label asp-for="RestourantName" class="control-label"></label>
            <input asp-for="RestourantName" class="form-control" />
            <span asp-validation-for="RestourantName" class="text-danger"></span>
        </div>

        <div class="form-group mt-2">
            <label asp-for="Image" class="control-label"></label>
            <div class="custom-file">
                <input type="file" asp-for="Image" class="custom-file-input" />
                <label class="custom-file-label" for="customFile">@SharedLocalizer["Choose_File"]</label>
            </div>
            <span asp-validation-for="Image.Length" class="text-danger"></span>
            <span asp-validation-for="Image.ContentType" class="text-danger"></span>
        </div>

        <div class="form-group mt-2">
            <label asp-for="Address" class="control-label"></label>
            <textarea maxlength="250" asp-for="Address" class="form-control" style="width:100%; height:150px;"></textarea>
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <div class="form-group mt-2">
            <label asp-for="Password" class="control-label"></label>
            <input type="password" asp-for="Password" class="form-control bg-white border" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group mt-2">
            <label asp-for="ConfirmPassword" class="control-label"></label>
            <input type="password" asp-for="ConfirmPassword" class="form-control bg-white border" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>

        <div class="form-group mt-2">
            <button type="submit" class="btn btn-primary">@SharedLocalizer["Save"]</button>
        </div>
    </form>
</div>
@section Scripts{
    <script type="text/javascript">
            $("custom-file-input").on("change", function () {
                var fileName = $(this).val().split("\\").pop();
                $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
            });
    </script>
}

